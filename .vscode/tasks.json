{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with PyInstaller",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m PyInstaller --clean --onefile --console --name auto-win src/app.py",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
